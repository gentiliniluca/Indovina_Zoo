<%= form_tag :controller => :game, :action => :play do %>
  <%= label_tag @question.id.to_s + "_" + @question.animal_1.id.to_s, image_tag(@question.animal_1.avatar, height: "200") %>
	<%= label_tag @question.id.to_s + "_" + @question.animal_1.id.to_s, @question.animal_1.name %>
	<%= radio_button_tag @question.id, @question.animal_1.id %>
	<%= label_tag @question.id.to_s + "_" + @question.animal_2.id.to_s, image_tag(@question.animal_2.avatar, height: "200") %>
	<%= label_tag @question.id.to_s + "_" + @question.animal_2.id.to_s, @question.animal_2.name %>
	<%= radio_button_tag @question.id, @question.animal_2.id %>
	<%= label_tag @question.id.to_s + "_skip", "Skip" %>
	<%= radio_button_tag @question.id, "skip", :default => "default" %>
	<br/>
	<%= audio_tag @result_animal.audio, :controls => true %>
	<%= hidden_field_tag "result_" + @question.id.to_s, @result_animal.id %>
	<br/>
	<%= hidden_field_tag "test_id", @test.id %>
	<%= hidden_field_tag "id", @id %>
	<%= submit_tag "Confirm" %>
<% end %>