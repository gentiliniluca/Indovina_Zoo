<h1>Seleziona il livello:</h1>


<div class="moduloDiv" >

          

	<%= form_tag :controller => :game, :action => :play do %>
	<table class="game">
		
		<% @levels.each do |level| %>
		<tr>
			<td class="level">
				<%= radio_button_tag "level", level.level, "true" %>
				<%= label_tag "level_" + level.level.to_s, "DifficoltÃ  " + level.level.to_s %>
			</td>
		</tr>
		<% end %>
		
		<tr>
			<td>
				<%= hidden_field_tag :id, "0"%>
				<div class="actions">
					<%= submit_tag "Select level", :class => "btn btn-primary" %>
				</div>
			</td>
		</tr>
		
	</table>     
	<% end %>  
</div>