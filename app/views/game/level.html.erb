
<div class="moduloDiv" >

          <table>

<%= form_tag :controller => :game, :action => :play do %>
	<% @levels.each do |level| %>
                    <tr>
                            <td><%= radio_button_tag "level", level.level, "true" %>
                                <%= level.level%>

                        <% end %>
                    </td>
                </tr>
                <tr>
                         <td>   <%= hidden_field_tag :id, "0"%>
                            <div class="actions">
                                <%= submit_tag "Select level" %>
                            </div></td>
                  </tr>
<% end %>

  </table>
</div>